.page{
	width: 100%;
	height: 100%;
	background: url('https://www.korjo.cn/xcx/yellowPageImg/bg.jpg') center center fixed no-repeat;
	background-size: cover;
	display: flex;
	flex-direction: column;
	justify-content: flex-start;
	align-items: center;
}
.demo{
	width: 100%;
	min-height:100%;
	position: absolute;
	left: 0;
	top: 0;
	z-index: 1;
}
.top_title{
	width: 100%;
	height: 2.8em;
	flex-grow: 0;
	background-color: rgba(128,128,128,0.2);
	position: relative;
}
.top_class{
	min-width: 100%;
	height: 2.8em;
	flex-grow: 0;
	background-color: rgba(128,128,128,0.2);
	position: relative;
	display: flex;
	justify-content: space-around;
	align-items: center;
	/*overflow: hidden;*/
}
.top_title:after,.top_class:after{
	content: '';
	position: absolute;
	left: 10%;
	top: 0;
	transform: translateX(-50%);
	border-top: 20rpx solid #fff;
	border-bottom: 20rpx solid transparent;
	border-left: 20rpx solid transparent;
	border-right: 20rpx solid transparent;
}
.add_tel{
	position: absolute;
	left: 10%;
	top: 50%;
	transform: translateY(-50%);
	font-size: 40rpx;
}
.tel_list{
	width: 100%;
	min-height: 10%;
	flex-grow: 1;
}
.foot_logo{
	width: 80%;
	/*max-height: 10%;*/
	flex-grow: 0;
	padding-bottom:20rpx; 
	display: flex;
	justify-content: flex-start;
	align-items: flex-end;
}
.logo{
	width: 10%;
}
.ground_name{
	font-size: 30rpx;
	color: #5b5757;
	padding: 0 20rpx;
}
.btn_tel{
	width: 80%;
	height: 6.2em;
	display: flex;
	justify-content: space-around;
	align-items: center;
	margin: 0 auto;
	border-bottom: 2rpx solid #cccccc;
	color: #7f0d27;
}

.tel_title{
	width: 75%;
