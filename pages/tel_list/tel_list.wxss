.page{
	width: 100%;
	height: 100%;
	background: url('https://www.korjo.cn/xcx/yellowPageImg/bg.jpg') center center fixed no-repeat;
	background-size: cover;
}
.top_title{
	width: 100%;
	height: 10%;
	background-color: rgba(128,128,128,0.2);
	position: relative;
}
.top_title:after{
	content: '';
	position: absolute;
	left: 10%;
	top: 0;
	transform: translateX(-50%);
	border-top: 20rpx solid #fff;
	border-bottom: 20rpx solid transparent;
	border-left: 20rpx solid transparent;
	border-right: 20rpx solid transparent;
}
.add_tel{
	position: absolute;
	left: 10%;
	top: 50%;
	transform: translateY(-50%);
	font-size: 40rpx;
	/*le*/
}
.content{
	margin-top: 50rpx;
	width: 100%;
	display: flex;
	flex-direction: column;
	justify-content: space-around;
	align-items: center;
}
.btn_class{
	width: 80%;
	margin: 10rpx auto;
	/*height: 80rpx;*/
	font-size: 34rpx;
	border-bottom: 4rpx solid #7f0d27;
	display: flex;
	flex-direction: row;
	justify-content: flex-start;
	align-items: center;
	text-align: center;
}
.class_name{
	padding: 0 10rpx;
	flex-shrink: 0;

	/*background: blue;*/
}
.class_list1{
	min-height: 1.4rem;
	width: 35%;
	position: relative;
	display: flex;
	flex-direction: row;
	flex-wrap: nowrap;
	justify-content: space-around;
	align-items: center;
}
.class_list1:after{
	content: '';
	position: absolute;
	right: 0;
	top: 50%;
}
.arrow{
	width: 10%;
	position: absolute;
	right: 0;
	top: 50%;
	transform: translateY(-50%);
}
.arrowed{
	width: 10%;
	position: absolute;
	right: 0;
	top: 50%;
	transform: rotate(180deg) translateY(50%);
}
.btn_add_tel{
	display: flex;
}
.btn_add{
	margin: 0 auto;
	/*flex-grow:1;*/
	justify-content: flex-end;
	width: 30rpx;
	font-size: 54rpx;
}
.img{
	margin: 25rpx auto;
	width: 80%;
	font-size: 34rpx;
	/*border-bottom: 2rpx solid #7f0d27;*/
	display: flex;
	flex-direction: row;
	justify-content: flex-start;
	align-items: center;
	text-align: center;
}
.img_show,.img_del{
	width: 30%;
	position: relative;
}
