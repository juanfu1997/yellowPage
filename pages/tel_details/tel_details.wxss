.add_tel{
	position: absolute;
	left: 10%;
	top: 50%;
	transform: translateY(-50%);
	font-size: 40rpx;
}
.tel_list{
	width: 100%;
	min-height: 10%;
	flex-grow: 1;
}
.details_list{
	width: 100%;
	display: flex;
	flex-direction: column;
	justify-content: space-around;
	align-items: center;
}
.btn_details{
	width: 80%;
	height: 2em;
	display: flex;
	justify-content: space-between;
	align-items: center;
	border-bottom: 2rpx solid #ccc;
}
.details_img{
	width: 8%;
}
.details_text{
	width: 84%;
}
.tab_store{
	width: 100%;
}
.top_tab{
	width: 100%;
	display: flex;
	justify-content: space-around;
	align-items: center;
	background-color: #ccc;
	margin: 0 auto;
	border-bottom: 4rpx solid #7f0d27;
}
.tab{
	background-color: #7f0d27;
	color:#fff;
	padding: 6rpx 12rpx;
	font-size: 28rpx;
	border-top-left-radius: 12rpx;
	border-top-right-radius: 12rpx;

}
.store_details{
	width: 80%;
	margin: 0 auto;
	word-wrap: break-word;
	white-space: pre-wrap;  
}