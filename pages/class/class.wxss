page{
	width: 100%;
	height: 100%;
}
.page{
	width: 100%;
	height: 100%;
	background: url('https://www.korjo.cn/xcx/yellowPageImg/bg.jpg') center center fixed no-repeat;
	background-size: cover;
	/*background-color: red;*/
}
.class_list{
	position: absolute;
	left: 50%;
	top: 10%;
	transform: translateX(-50%);
	width: 70%;
	height: 70%;
	/*background: red;*/
	margin: 0 auto;
	display: flex;
	flex-direction: row;
	justify-content: space-around;
	align-items: center;
	flex-wrap: wrap;

}
.btn_class{
	width: 30%;
	display: flex;
	flex-direction: column;
	justify-content: space-around;
	align-items: center;

}
.class_img{
	width: 100%;

}
.class_name{
	width: 100%;
	height: 50rpx;
	line-height: 50rpx;
	font-size: 30rpx;
	text-align: center;
	color: #7f0d26;
}
.add_tel{
	width: 15%;
	position: absolute;
	right: 20rpx;
	bottom: 5%;
}
.ground_switch{
	position: absolute;
	left: 10%;
	bottom: 2%;
	width: 10%;
}
.btn_logo{
	width: 100%;
	position: relative;
}
.logo{
	width: 100%;
}
.switch{
	position: absolute;
	right: 0;
	bottom: 0;
	width: 30%;
}
.ground_name{
	position: absolute;
	right: 0;
	bottom: 0;
	width: 180rpx;
	text-align: center;
	color: #5b5757;
	transform: translateX(100%);
}